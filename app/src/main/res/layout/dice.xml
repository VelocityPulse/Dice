<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/dice_background"
        android:layout_width="@dimen/dice_background_little_size"
        android:layout_height="@dimen/dice_background_little_size"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/dice_background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dice_shape_1"
        android:layout_width="@dimen/dice_shape_little_size"
        android:layout_height="@dimen/dice_shape_little_size"
        android:src="@drawable/dice_1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dice_shape_2"
        android:layout_width="@dimen/dice_shape_little_size"
        android:layout_height="@dimen/dice_shape_little_size"
        android:src="@drawable/dice_2"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dice_shape_3"
        android:layout_width="@dimen/dice_shape_little_size"
        android:layout_height="@dimen/dice_shape_little_size"
        android:src="@drawable/dice_3"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dice_shape_4"
        android:layout_width="@dimen/dice_shape_little_size"
        android:layout_height="@dimen/dice_shape_little_size"
        android:src="@drawable/dice_4"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dice_shape_5"
        android:layout_width="@dimen/dice_shape_little_size"
        android:layout_height="@dimen/dice_shape_little_size"
        android:src="@drawable/dice_5"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dice_shape_6"
        android:layout_width="@dimen/dice_shape_little_size"
        android:layout_height="@dimen/dice_shape_little_size"
        android:src="@drawable/dice_6"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

</FrameLayout>
